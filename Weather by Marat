package main

import (
	"context"
	"encoding/json"
	"fmt"
	"log"
	"net/http"
	"net/url"
	"os"
	"strings"
	"time"

	tgbotapi "github.com/go-telegram-bot-api/telegram-bot-api/v5"
)

const (
	nominatimURL = "https://nominatim.openstreetmap.org/search"
	openMeteoURL = "https://api.open-meteo.com/v1/forecast"
	userAgent    = "weather-telegram-bot/1.0"
)

type nominatimResponse []struct {
	DisplayName string `json:"display_name"`
	Lat         string `json:"lat"`
	Lon         string `json:"lon"`
}

type weatherResponse struct {
	CurrentWeather struct {
		Temperature float64 `json:"temperature"`
		WeatherCode int     `json:"weathercode"`
		WindSpeed   float64 `json:"windspeed"`
	} `json:"current_weather"`
}

func getCoordinatesNominatim(ctx context.Context, client *http.Client, city string) (string, string, string, error) {
	encodedCity := url.QueryEscape(city)
	urlStr := fmt.Sprintf("%s?format=json&q=%s", nominatimURL, encodedCity)

	req, err := http.NewRequestWithContext(ctx, http.MethodGet, urlStr, nil)
	if err != nil {
		return "", "", "", fmt.Errorf("build nominatim request: %w", err)
	}
	req.Header.Set("User-Agent", userAgent)

	resp, err := client.Do(req)
	if err != nil {
		return "", "", "", fmt.Errorf("request nominatim: %w", err)
	}
	defer resp.Body.Close()

	if resp.StatusCode != http.StatusOK {
		return "", "", "", fmt.Errorf("nominatim returned status %d", resp.StatusCode)
	}

	var data nominatimResponse
	if err := json.NewDecoder(resp.Body).Decode(&data); err != nil {
		return "", "", "", fmt.Errorf("decode nominatim response: %w", err)
	}

	if len(data) == 0 {
		return "", "", "", fmt.Errorf("город не найден")
	}

	return data[0].Lat, data[0].Lon, data[0].DisplayName, nil
}

func getWeatherOpenMeteo(ctx context.Context, client *http.Client, lat, lon string) (string, error) {
	urlStr := fmt.Sprintf("%s?latitude=%s&longitude=%s&current_weather=true", openMeteoURL, lat, lon)

	req, err := http.NewRequestWithContext(ctx, http.MethodGet, urlStr, nil)
	if err != nil {
		return "", fmt.Errorf("build open-meteo request: %w", err)
	}
	req.Header.Set("User-Agent", userAgent)

	resp, err := client.Do(req)
	if err != nil {
		return "", fmt.Errorf("request open-meteo: %w", err)
	}
	defer resp.Body.Close()

	if resp.StatusCode != http.StatusOK {
		return "", fmt.Errorf("open-meteo returned status %d", resp.StatusCode)
	}

	var data weatherResponse
	if err := json.NewDecoder(resp.Body).Decode(&data); err != nil {
		return "", fmt.Errorf("decode open-meteo response: %w", err)
	}

	weather := data.CurrentWeather
	description := weatherCodeToDescription(weather.WeatherCode)

	return fmt.Sprintf("Сейчас %.0f°C, %s, ветер %.0f м/с.", weather.Temperature, description, weather.WindSpeed), nil
}

func weatherCodeToDescription(code int) string {
	switch code {
	case 0:
		return "ясно"
	case 1, 2, 3:
		return "переменная облачность"
	case 45, 48:
		return "туман"
	case 51, 53, 55, 56, 57:
		return "морось"
	case 61, 63, 65, 66, 67:
		return "дождь"
	case 71, 73, 75, 77:
		return "снег"
	case 80, 81, 82:
		return "ливень"
	case 85, 86:
		return "снегопад"
	case 95:
		return "гроза"
	case 96, 99:
		return "гроза с градом"
	default:
		return "неизвестная погода"
	}
}

func main() {
	botToken := strings.TrimSpace(os.Getenv("BOT_TOKEN"))
	if botToken == "" {
		log.Fatal("environment variable BOT_TOKEN is required")
	}

	bot, err := tgbotapi.NewBotAPI(botToken)
	if err != nil {
		log.Panicf("create bot: %v", err)
	}

	bot.Debug = true
	log.Printf("Authorized on account %s", bot.Self.UserName)

	updates := bot.GetUpdatesChan(tgbotapi.UpdateConfig{Timeout: 60})
	httpClient := &http.Client{Timeout: 10 * time.Second}

	for update := range updates {
		if update.Message == nil || update.Message.Text == "" {
			continue
		}

		chatID := update.Message.Chat.ID

		if update.Message.IsCommand() {
			switch update.Message.Command() {
			case "start":
				sendMessage(bot, chatID, "Введите город, чтобы узнать погоду.")
			default:
				sendMessage(bot, chatID, "Команда не поддерживается. Просто отправьте название города.")
			}
			continue
		}

		city := strings.TrimSpace(update.Message.Text)
		if city == "" {
			sendMessage(bot, chatID, "Пожалуйста, укажите город.")
			continue
		}

		ctx, cancel := context.WithTimeout(context.Background(), 10*time.Second)
		lat, lon, displayName, err := getCoordinatesNominatim(ctx, httpClient, city)
		cancel()
		if err != nil {
			log.Printf("failed to find city %q: %v", city, err)
			sendMessage(bot, chatID, "Не могу найти такой город :(")
			continue
		}

		ctx, cancel = context.WithTimeout(context.Background(), 10*time.Second)
		weather, err := getWeatherOpenMeteo(ctx, httpClient, lat, lon)
		cancel()
		if err != nil {
			log.Printf("failed to fetch weather for %s (%s,%s): %v", displayName, lat, lon, err)
			sendMessage(bot, chatID, "Ошибка при получении погоды :(")
			continue
		}

		sendMessage(bot, chatID, fmt.Sprintf("Погода для: %s\n%s", displayName, weather))
	}
}

func sendMessage(bot *tgbotapi.BotAPI, chatID int64, text string) {
	if _, err := bot.Send(tgbotapi.NewMessage(chatID, text)); err != nil {
		log.Printf("failed to send message: %v", err)
	}
}
